<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="163px"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_select_package_bj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@mipmap/unselect_package"/>

        <TextView
            android:id="@+id/tv_select_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:layout_marginLeft="46px"
            android:layout_centerVertical="true"
            android:textSize="26px"/>

        <TextView
            android:id="@+id/tv_select_package_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red3"
            android:layout_marginRight="46px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="26px"/>
    </RelativeLayout>

</LinearLayout>