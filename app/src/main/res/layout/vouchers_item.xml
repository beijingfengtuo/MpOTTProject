<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="208px"
        android:layout_marginTop="25px">

        <ImageView
            android:id="@+id/img_vouchers_bj"
            android:layout_width="620px"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_vouchers_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_vouchers_bj"
            android:layout_marginLeft="65px"
            android:layout_marginTop="66px"
            android:textColor="@color/white"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_vouchers_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_vouchers_name"
            android:layout_below="@id/tv_vouchers_name"
            android:layout_marginTop="18px"
            android:textColor="@color/white"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_vouchers_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/img_vouchers_bj"
            android:layout_marginRight="86px"
            android:layout_marginTop="50px"
            android:textColor="@color/white"
            android:textSize="38px" />

        <TextView
            android:id="@+id/tv_vouchers_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/img_vouchers_bj"
            android:layout_below="@id/tv_vouchers_price"
            android:layout_marginRight="111px"
            android:layout_marginTop="20px"
            android:text="@string/date_of_expiry"
            android:textColor="@color/white"
            android:textSize="17px" />

        <TextView
            android:id="@+id/tv_vouchers_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/img_vouchers_bj"
            android:layout_below="@id/tv_vouchers_date"
            android:layout_marginRight="80px"
            android:layout_marginTop="8px"
            android:textColor="@color/white"
            android:textSize="17px" />
    </RelativeLayout>
</RelativeLayout>