<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/pay_success_title"
        layout="@layout/user_title_in" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/vip_price_color"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48px"
                android:background="@mipmap/pay_success" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="34px"
                android:text="@string/pay_success"
                android:textColor="@color/colore_home11"
                android:textSize="36px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pay_success_price0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/order_amount0"
                        android:textColor="@color/colore_home9"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/tv_pay_success_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@id/tv_pay_success_price0"
                        android:textColor="@color/red3"
                        android:textSize="32px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px">

                    <TextView
                        android:id="@+id/tv_pay_success_number0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/trad_no0"
                        android:textColor="@color/colore_home9"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/tv_pay_success_number1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@id/tv_pay_success_number0"
                        android:textColor="@color/red3"
                        android:textSize="32px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px">

                    <TextView
                        android:id="@+id/tv_pay_success_validity0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/validity"
                        android:textColor="@color/colore_home9"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/tv_pay_success_validity1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@id/tv_pay_success_validity0"
                        android:textColor="@color/red3"
                        android:textSize="32px" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50px"
                android:layout_marginTop="48px"
                android:background="@mipmap/pay_success_sure"
                android:text="@string/affirm"
                android:textColor="@color/white"
                android:textSize="28px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_pay_success_advertising"
            android:layout_width="match_parent"
            android:layout_height="540px"
            android:layout_marginTop="20px"
            android:background="@mipmap/pay_success_advertising" />
    </LinearLayout>
</LinearLayout>