<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:layout_marginLeft="-42px"
            android:layout_marginRight="-42px"
            android:background="@color/home_title_bg" />

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginLeft="10px">

            <ImageView
                android:id="@+id/img_title_tag_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/titel_tag_left"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_title_tag_left"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:text="直播专区"
                android:textColor="@color/black"
                android:textSize="24px" />

            <ImageView
                android:id="@+id/img_title_tag_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/title"
                android:background="@mipmap/titel_tag_right"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/fu_title_relativelayout"
                android:layout_width="180px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/fu_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="28px"
                    android:background="@mipmap/fu_title_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:text=""
                    android:textColor="@color/channel_inag"
                    android:textSize="24px" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>