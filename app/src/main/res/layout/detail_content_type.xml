<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detail_content_sp80"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="@dimen/detail_content_sp18"
    android:paddingTop="@dimen/detail_content_sp18">

    <ImageView
        android:id="@+id/title_imageView1"
        android:layout_width="@dimen/detail_content_title2"
        android:layout_height="@dimen/detail_content_title2"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7sp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/detail_comment" />

    <TextView
        android:id="@+id/title_number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/title_imageView1"
        android:visibility="gone"
        android:text=""
        android:textColor="@color/colore_home3"
        android:textSize="@dimen/detail_content_title9" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_imageView3"
            android:layout_width="@dimen/detail_content_sp45"
            android:layout_height="@dimen/detail_content_sp45"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:src="@drawable/collect" />

        <ImageView
            android:id="@+id/title_imageView2"
            android:layout_width="@dimen/detail_content_sp45"
            android:layout_height="@dimen/detail_content_sp45"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/share_detial" />
    </LinearLayout>

</RelativeLayout>
