<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/home_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@mipmap/back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/home_title_vip"
        android:layout_width="45px"
        android:layout_height="45px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36px"
        android:background="@mipmap/home_vip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_home_title_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/user_my"
        android:textColor="@color/black"
        android:textSize="30px"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_home_title_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/home_logo"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_home_title_right1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_home_title_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/tv_home_title_right1"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_home_title_history"
        android:layout_width="45px"
        android:layout_height="45px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:background="@mipmap/home_history"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_home_title_right3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/tv_home_title_right2"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_home_title_seach"
        android:layout_width="45px"
        android:layout_height="45px"
        android:layout_centerVertical="true"
        android:layout_marginRight="30px"
        android:layout_toLeftOf="@id/img_home_title_history"
        android:background="@mipmap/home_seach"
        android:visibility="gone" />

</RelativeLayout>