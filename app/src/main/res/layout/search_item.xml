<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/iv"
        android:layout_width="94dp"
        android:layout_height="133dp"
        android:scaleType="fitXY"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginLeft="12dp"
        android:padding="6dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_vname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的少女时代"
            android:textColor="@color/black"
            android:singleLine="true"
            android:textSize="@dimen/search_result_big" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_item_dis"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/release"
                android:textSize="@dimen/search_result_small"
                android:visibility="gone"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015"
                android:textSize="@dimen/search_result_small"
                android:visibility="gone"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_vtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_item_dis"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/troup"
                android:textSize="@dimen/search_result_small"
                android:visibility="gone"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:textSize="@dimen/search_result_small"
                android:visibility="gone"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_item_dis"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tostar"
                android:textSize="@dimen/search_result_small"
                android:visibility="gone"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/starname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/search_result_small"
                android:singleLine="true"
                android:visibility="gone"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_item_dis"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/creator"
                android:textSize="@dimen/search_result_small"
                android:visibility="gone"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tv_dirname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:textSize="@dimen/search_result_small"
                android:visibility="gone"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_actor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_item_dis"
            android:orientation="horizontal" >
            <View
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/searchgray"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>