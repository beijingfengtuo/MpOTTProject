<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="163px">

        <ImageView
            android:id="@+id/img_info_enter_product_bj"
            android:layout_width="174px"
            android:layout_height="99px"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44px" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@id/img_info_enter_product_bj">

            <TextView
                android:id="@+id/tv_info_enter_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:textColor="@color/colore_home3"
                android:textSize="26px" />

            <TextView
                android:id="@+id/tv_info_enter_product_introdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_info_enter_product_name"
                android:layout_marginRight="50px"
                android:layout_marginTop="20px"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/colore_home9"
                android:textSize="20px" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>