<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:paddingTop="6sp">

        <ImageView
            android:id="@+id/detail_btn_pull"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/tab_arrow_dpwm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toLeftOf="@id/detail_btn_pull"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxEms="20"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colore_home6"
                android:textSize="@dimen/detial_title_size" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detiles_paly_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:layout_marginTop="-4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/play_times" />

        <TextView
            android:id="@+id/play_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_hui6"
            android:textSize="@dimen/detail_content_title10" />

        <TextView
            android:id="@+id/detail_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_hui6"
            android:textSize="@dimen/detail_content_title10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_content_pull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_storyplot"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/detail_storyplot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="6sp"
            android:lines="5"
            android:text=""
            android:textColor="@color/colore_home3"
            android:textSize="@dimen/detial_content_size" />

        <TextView
            android:id="@+id/detail_storyplot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6sp"
            android:text=""
            android:textColor="@color/colore_home3"
            android:textSize="@dimen/detial_content_size"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>