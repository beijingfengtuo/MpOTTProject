<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vip_price_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/my_user_title"
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:layout_marginTop="12px"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/my_user_heard"
            android:layout_width="wrap_content"
            android:layout_height="220px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px">

            <ImageView
                android:id="@+id/img_my_user_heard"
                android:layout_width="116px"
                android:layout_height="116px"
                android:layout_centerVertical="true"
                android:background="@mipmap/user_heard" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:layout_marginLeft="34px"
                android:layout_marginTop="60px"
                android:layout_toRightOf="@id/img_my_user_heard"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxEms="8"
                    android:text="@string/user_sign_in_title"
                    android:textColor="@color/colore_home3"
                    android:textSize="@dimen/home_four_fragment_g" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36px">

                    <Button
                        android:id="@+id/btn_login_registered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/register_bg2"
                        android:clickable="false"
                        android:text="登录/注册"
                        android:textColor="@color/red3"
                        android:textSize="@dimen/home_four_fragment_h" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_user_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:textColor="@color/colore_home1"
                    android:textSize="@dimen/home_four_fragment_g"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>